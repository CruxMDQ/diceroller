<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/fragment_char_sheet"
    >

    <TextView
        android:id="@+id/lblSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/label_skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">

        <!--Mental skills -->
        <com.callisto.diceroller.views.StatLayout
            android:id="@+id/containerSkillsMental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/background_dark"
            android:orientation="vertical"
            android:padding="@dimen/margin_small"
            app:isOpen="false"
            >

            <!-- Header -->
            <LinearLayout
                android:id="@+id/headerMentalSkills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/lblSkillsMental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/label_skills_mental"/>

                <TextView
                    android:id="@+id/txtSelectedMentalSkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Skills -->
            <LinearLayout
                android:id="@+id/panelSkillsMental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Academics -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillAcademics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_academics"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Computer -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillComputer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_computer"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Crafts -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillCrafts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_crafts"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Investigation -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillInvestigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_investigation"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Medicine -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillMedicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_medicine"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Occult -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillOccult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_occult"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Politics -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillPolitics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_politics"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>

                <!-- Science -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillScience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_science"
                    app:statType="@string/stat_type_mental"
                    app:statValue="0"/>
            </LinearLayout>
        </com.callisto.diceroller.views.StatLayout>

        <!--Physical skills -->
        <com.callisto.diceroller.views.StatLayout
            android:id="@+id/containerSkillsPhysical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
