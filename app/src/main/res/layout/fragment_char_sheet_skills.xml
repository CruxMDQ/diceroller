                <TextView
                    android:id="@+id/txtSelectedPhysicalSkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Skills -->
            <LinearLayout
                android:id="@+id/panelSkillsPhysical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Athletics -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillAthletics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_athletics"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Brawl -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillBrawl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_brawl"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Drive -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillDrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_drive"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Firearms -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillFirearms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_guns"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Larceny -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillLarceny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_larceny"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Stealth -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillStealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_stealth"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Survival -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillSurvival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_survival"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Weaponry -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillWeaponry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_weaponry"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>
            </LinearLayout>
        </com.callisto.diceroller.views.StatLayout>

        <!--Social skills -->
        <com.callisto.diceroller.views.StatLayout
            android:id="@+id/containerSkillsSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/background_dark"
            android:orientation="vertical"
            android:padding="@dimen/margin_small"
            >

            <!-- Header -->
            <LinearLayout
                android:id="@+id/headerSocialSkills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/lblSkillsSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/label_skills_social"/>

                <TextView
                    android:id="@+id/txtSelectedSocialSkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Skills -->
            <LinearLayout
                android:id="@+id/panelSkillsSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Animal Ken -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillAnimalKen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_animal_ken"
                    app:statType="@string/stat_type_social"
                    app:statValue="0"/>

                <!-- Empathy -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillEmpathy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_empathy"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Expression -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillExpression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_expression"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Intimidation -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillIntimidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_intimidation"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Persuasion -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillPersuasion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_persuasion"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Socialize -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillSocialize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_socialize"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Streetwise -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillStreetwise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_streetwise"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>

                <!-- Subterfuge -->
                <com.callisto.diceroller.views.StatBox
                    android:id="@+id/skillSubterfuge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:statCategory="@string/stat_category_skill"
                    app:statName="@string/skill_subterfuge"
                    app:statType="@string/stat_type_physical"
                    app:statValue="0"/>
            </LinearLayout>
        </com.callisto.diceroller.views.StatLayout>
    </LinearLayout>
</LinearLayout>