<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/fragment_char_sheet"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/lblSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/label_skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!--Mental skills -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lblSkillsMental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_skills_mental"/>
            
            <!-- Academics -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillAcademics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_academics"
                custom:statValue="0"/>

            <!-- Crafts -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillCrafts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_crafts"
                custom:statValue="0"/>

            <!-- Computer -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_computer"
                custom:statValue="0"/>

            <!-- Investigation -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillInvestigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_investigation"
                custom:statValue="0"/>

            <!-- Medicine -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_medicine"
                custom:statValue="0"/>

            <!-- Occult -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillOccult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_occult"
                custom:statValue="0"/>

            <!-- Politics -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillPolitics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_politics"
                custom:statValue="0"/>

            <!-- Science -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/skill_science"
                custom:statValue="0"/>
        </LinearLayout>

        <!--Physical skills -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lblSkillsPhysical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_skills_physical"/>

            <!-- Athletics -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillAthletics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_athletics"
                custom:statValue="0"/>

            <!-- Brawl -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillBrawl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_brawl"
                custom:statValue="0"/>

            <!-- Drive -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillDrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_drive"
                custom:statValue="0"/>

            <!-- Firearms -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillFirearms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_guns"
                custom:statValue="0"/>

            <!-- Larceny -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillLarceny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_larceny"
                custom:statValue="0"/>

            <!-- Stealth -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillStealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_stealth"
                custom:statValue="0"/>

            <!-- Survival -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillSurvival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_survival"
                custom:statValue="0"/>

            <!-- Weaponry -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillWeaponry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="@string/label_weaponry"
                custom:statValue="0"/>
        </LinearLayout>

        <!--Social skills -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lblSkillsSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_skills_social"/>

            <!-- Animal Ken -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillAnimalKen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Animal Ken"
                custom:statValue="0"/>

            <!-- Empathy -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillEmpathy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Empathy"
                custom:statValue="0"/>

            <!-- Expression -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Expression"
                custom:statValue="0"/>

            <!-- Intimidation -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillIntimidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Intimidation"
                custom:statValue="0"/>

            <!-- Persuasion -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillPersuasion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Persuasion"
                custom:statValue="0"/>

            <!-- Socialize -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillSocialize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Socialize"
                custom:statValue="0"/>

            <!-- Streetwise -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillStreetwise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Streetwise"
                custom:statValue="0"/>

            <!-- Subterfuge -->
            <com.callisto.diceroller.views.StatBox
                android:id="@+id/skillSubterfuge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:statName="Subterfuge"
                custom:statValue="0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>