<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/lblDicePool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/label_dice_pool"
            />

        <TextView
            android:id="@+id/txtDicePool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblRerollThreshold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_reroll_threshold" />

        <EditText
            android:id="@+id/inputRerollThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:text="10"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkExtendedRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_extended_roll"
        />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_btn_roll"
        />
</LinearLayout>