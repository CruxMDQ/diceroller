<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tiny"
    android:background="@drawable/background_resource_box"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblPerformer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/label_spinner_character"
            />

        <Spinner
            android:id="@+id/pickerCharacter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblPerformerStat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/label_spinner_stat"
            />

        <Spinner
            android:id="@+id/pickerStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblPerformerDicePool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/label_dice_pool"
            />

        <TextView
            android:id="@+id/txtPerformerDicePool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_weight="1"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabClearPerformerStats"
            android:layout_width="@dimen/fab_size_tiny"
            android:layout_height="@dimen/fab_size_tiny"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:backgroundTint="@color/color_red_dark"
            android:src="@android:drawable/ic_delete"
            android:tint="@color/color_white"
            app:fabCustomSize="@dimen/fab_size_tiny"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCharacterRerollThreshold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/label_reroll_threshold"/>

        <EditText
            android:id="@+id/inputPerformerRerollThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="10"/>
    </LinearLayout>
</LinearLayout>