<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.design.widget.AppBarLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->

        <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay"/>-->

        <!--</android.support.design.widget.AppBarLayout>-->

        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="@dimen/margin_small"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/panelNewCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelNewCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_new_character"
            android:visibility="gone"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabNewCharacter"
            android:layout_width="@dimen/fab_size_small"
            android:layout_height="@dimen/fab_size_small"
            android:layout_margin="@dimen/margin_fab_small"
            android:backgroundTint="@color/color_yellow_light"
            android:src="@drawable/ic_feather_pen"
            app:fabCustomSize="@dimen/fab_size_small"
            />
    </LinearLayout>

    <LinearLayout android:id="@+id/panelSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_settings"
            android:visibility="gone"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSettings"
            android:layout_width="@dimen/fab_size_small"
            android:layout_height="@dimen/fab_size_small"
            android:layout_margin="@dimen/margin_fab_small"
            android:backgroundTint="@color/color_blue_dark"
            android:src="@drawable/ic_wrench"
            android:tint="@color/color_white"
            app:fabCustomSize="@dimen/fab_size_small"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/panelOpposedCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelOpposedCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_opposed_check"
            android:visibility="gone"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabOpposedCheck"
            android:layout_width="@dimen/fab_size_small"
            android:layout_height="@dimen/fab_size_small"
            android:layout_margin="@dimen/margin_fab_small"
            android:src="@drawable/ic_fight"
            android:tint="@android:color/white"
            app:fabCustomSize="@dimen/fab_size_small"
            />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUnfold"
        android:layout_width="@dimen/fab_size_medium"
        android:layout_height="@dimen/fab_size_medium"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_small"
        android:src="@android:drawable/ic_menu_add"/>

</android.support.design.widget.CoordinatorLayout>